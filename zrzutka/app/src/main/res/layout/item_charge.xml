<layout>
    <data>

        <variable
            name="charge"
            type="trzye.zrzutka.model.entity.charge.Charge" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chargeContributor"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="13sp"
            android:alpha="0.87"
            android:text="@{charge.charged.friend.showingName}"/>


        <TextView
            android:id="@+id/chargeContributorToPay"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="13sp"
            android:alpha="0.87"
            android:text="@{charge.readableAmountToPay}"
            android:textAlignment="textEnd"/>


        <TextView
            android:id="@+id/chargeContributorPaid"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="13sp"
            android:alpha="0.87"
            android:text="@{charge.readableAmountPaid}"
            android:textAlignment="textEnd"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.12"
        android:background="@color/colorBlack"
        />

</LinearLayout>
</layout>