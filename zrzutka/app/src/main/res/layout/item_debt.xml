<layout>
    <data>
        <variable
            name="debt"
            type="trzye.zrzutka.model.dto.DebtDTO" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/itemDebtLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/whoPays"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="13sp"
            android:alpha="0.87"
            android:text="@{debt.whoPays.showingName}"/>


        <TextView
            android:id="@+id/toWhom"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="13sp"
            android:alpha="0.87"
            android:text="@{debt.toWhom.showingName}" />


        <TextView
            android:id="@+id/amount"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="13sp"
            android:alpha="0.87"
            android:text="@{debt.readableAmountToPay}"
            android:textAlignment="textEnd"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.12"
        android:background="@color/colorBlack"
        />

</LinearLayout>
</layout>